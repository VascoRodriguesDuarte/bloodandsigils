  "flags": {
    "blood-and-sigils": {
      "pf2e-homebrew": {
        "featTraits": {
          "sigil": {
            "label": "Sigil",
            "description": "Sigils are special actions and feats that can only be used with the Invoke Sigil action. Each sigil has its own traits that are applied only when that one is invoked, making it so that when that one is interrupted, you can still draw the others after. However, if something interrupts the Invoke Sigil action itself before you do any sigil, then you lose all your actions that were meant to invoke your sigils."
          },
          "combo": {
            "label": "Combo",
            "description": "By performing certain actions or invoking specific types of sigils in a previous round, you can greatly alter how a sigil works. After changing a sigil with a combo trait, you cannot use another action with the combo trait again for 1 hour."
          },
          "inscriber": {
            "label": "Inscriber",
            "description": "Feats and features of the inscriber class."
          },
